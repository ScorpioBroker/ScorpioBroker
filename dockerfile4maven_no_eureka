FROM openjdk:11-jre

WORKDIR /usr/src/scorpio



ARG BUILD_DIR_SCR

ARG JAR_FILE_BUILD_SCR

ARG JAR_FILE_RUN_SCR

COPY ${BUILD_DIR_SCR}/target/${JAR_FILE_BUILD_SCR} ./scr/${JAR_FILE_RUN_SCR}

COPY ${BUILD_DIR_SCR}/src/main/resources/application-aaio-eureka-free.yml ./scr/config/application.yml

ENV scrdir scr
ENV scrjar ${JAR_FILE_RUN_SCR}
ENV spring_args ""
CMD cd scr && java -jar ${scrjar} ${spring_args}
